<odoo>
    <data>

        <!-- FORM VIEW -->
        <record id="view_ocr_invoice_form" model="ir.ui.view">
            <field name="name">ocr.invoice.form</field>
            <field name="model">ocr.invoice</field>
            <field name="arch" type="xml">
                <form string="OCR Invoice">
                    <sheet>
                        <group string="Document">
                            <field name="name"/>
                            <field name="file" filename="name"/>
                        </group>

                        <group string="Extracted Information">
                            <field name="vendor_name"/>
                            <field name="invoice_date"/>
                            <field name="total_amount"/>
                            <field name="vat_amount"/>
                            <field name="confidence_score"/>
                        </group>

                        <group string="Technical">
                            <field name="status"/>
                            <field name="extraction_log"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- TREE VIEW -->
        <record id="view_ocr_invoice_tree" model="ir.ui.view">
            <field name="name">ocr.invoice.tree</field>
            <field name="model">ocr.invoice</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="vendor_name"/>
                    <field name="invoice_date"/>
                    <field name="total_amount"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <!-- SEARCH VIEW -->
        <record id="view_ocr_invoice_search" model="ir.ui.view">
            <field name="name">ocr.invoice.search</field>
            <field name="model">ocr.invoice</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="vendor_name"/>
                    <field name="invoice_date"/>
                    <filter string="Extracted" name="extracted" domain="[('status','=','extracted')]"/>
                    <filter string="Uploaded" name="uploaded" domain="[('status','=','uploaded')]"/>
                </search>
            </field>
        </record>

        <!-- ACTION -->
        <record id="action_ocr_invoice" model="ir.actions.act_window">
            <field name="name">OCR Invoices</field>
            <field name="res_model">ocr.invoice</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_ocr_invoice_tree"/>
        </record>

    </data>
</odoo>
